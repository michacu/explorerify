<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
<%= devise_error_messages! %>
<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <form role="form">
      <h2>Forgotten Password</h2>
      <hr class="colorgraph">
      <div class="row">
      <div class="form-group">
        <div class="field">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
      </div>    
      <hr class="colorgraph">
      <div class="row">
        <%= f.submit id: 'hidden_submit_btt', style: 'display: none;' %>
        <div class="col-xs-12 col-md-12"><a href="#" class="btn btn-success btn-block btn-lg" onclick="$('#hidden_submit_btt').click(); return false;">Send me reset password instructions</a></div>
      </div>
    </form>
  </div>
</div>
<% end %>
