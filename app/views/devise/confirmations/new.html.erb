<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
<%= devise_error_messages! %>
<div class="container">

<div class="row">
    <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
    <form role="form">
      <h2>Resend confirmation instructions</h2>
      <hr class="colorgraph">
      <div class="row">
      <div class="form-group">
        <div class="field">
          <%= f.label :email%><br />
    	  <%= f.email_field :email, style: "width:100%", autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email) %>
        </div>
      </div>
      </div>
      <hr class="colorgraph">
      <div class="row">
        <%= f.submit id: 'hidden_submit_button', style: 'display: none;' %>
        <div class="col-xs-12 col-md-6"><a href="#" class="btn btn-success btn-block btn-lg" onclick="$('#hidden_submit_button').click(); return false;">Resend instructions</a></div>
        <div class="col-xs-12 col-md-6"><a href="/users/sign_in" class="btn btn-default btn-block btn-lg">Log In</a></div>
    </form>
  </div>
</div>
<% end %>