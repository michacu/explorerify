<%= form_for([@post,@post.comments.build]) do |f| %>
    <form role="form">
      <div class="row">
      <div class="form-group">
        <div class="field">
          <%= f.label :name %>
          <%= f.text_field :name, id: :comment_name %>
        </div>
      </div>
      </div>
      <div class="row">
      <div class="form-group">
        <div class="field">
          <%= f.label :body %>
          <%= f.text_area :body, id: :post_body, :rows => 2, :cols => 80 %>
        </div>
      </div>
      </div>    
      <hr>
      <div class="row">
        <%= f.submit :class => 'glyphicon glyphicon-plus btn btn-success' %>
      </div>
    </form>
<% end %>